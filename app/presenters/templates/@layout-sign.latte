<body class="hold-transition skin-red login-page">
<div class="login-box">
    <div class="login-logo">
        <b>Administrace</b>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">

        <div n:foreach="$flashes as $flash" class="callout callout-{$flash->type}">
            {$flash->message}
        </div>

        {include content}

    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
