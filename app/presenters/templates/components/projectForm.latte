<form role="form" n:name=$form>
    <div class="row">
        <div class="col-lg-6">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="form-group">
                        {label name/}
                        {input name, class => 'form-control'}
                    </div>
                    <div class="form-group">
                        {label description/}
                        {input description, class => 'form-control'}
                        <!--<textarea class="form-control" rows="3" placeholder="Vyplnit"></textarea>-->
                    </div>
                    <div class="form-group">
                        {label leader/}
                        {input leader, class => 'form-control'}
                    </div>
                    <div class="form-group">
                        {label client/}
                        {input client, class => 'form-control'}
                    </div>
                    <div class="form-group">
                        {label fromDate/} {$form['fromDate']->options['description']}
                        <span class='input-group date' id='datetimepicker1'>
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </span>
                            {input fromDate, class => 'form-control pull-right show-error-apart', id => 'fromdate'}
                        </span>
                        <div id="error-container_fromdate"></div>
                    </div>
                    <div class="form-group">
                        {label toDate/} {$form['toDate']->options['description']}
                        <span class='input-group date' id='datetimepicker2'>
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </span>
                            {input toDate, class => 'form-control pull-right show-error-apart', id => 'todate'}
                        </span>
                        <div id="error-container_todate"></div>
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            var $dtp1 = $('#datetimepicker1');
                            var $dtp2 = $('#datetimepicker2');

                            $dtp1.datetimepicker({
                                format: 'MM/DD/YYYY'
                            });

                            $dtp2.datetimepicker({
                                format: 'MM/DD/YYYY'
                            });

                            $dtp1.on("dp.change", function(e) {
                                $dtp2.data("DateTimePicker").minDate(e.date);
                            });
 
                            $dtp2.on("dp.change", function(e) {
                                $dtp1.data("DateTimePicker").maxDate(e.date);
                            }); 
                        });
                    </script>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Přiřadit uživatele</h3>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        {foreach $form[employees]->items as $key => $label}
                            <p>{label employees:$key}
                                {input employees:$key, type=>"checkbox", class=>"minimal"}
                                {$label}
                                {/label}</p>
                        {/foreach}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {input submit, class => 'btn btn-default'}
</form>
